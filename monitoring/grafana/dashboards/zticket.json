{
  "dashboard": {
    "id": null,
    "uid": "zticket",
    "title": "ZTicket Monitoring",
    "timezone": "browser",
    "refresh": "5s",
    "time": { "from": "now-5m", "to": "now" },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate (req/s)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"zticket\"}[30s])",
            "legendFormat": "{{method}} {{uri}} [{{status}}]"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "reqps" }
        }
      },
      {
        "id": 2,
        "title": "HTTP Response Time p95 (ms)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"zticket\"}[30s]))",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "s" }
        }
      },
      {
        "id": 3,
        "title": "HTTP Response Time p99 (ms)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket{application=\"zticket\"}[30s]))",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "s" }
        }
      },
      {
        "id": 4,
        "title": "HTTP Error Rate (4xx + 5xx)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"zticket\",status=~\"4..|5..\"}[30s])",
            "legendFormat": "{{method}} {{uri}} [{{status}}]"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "reqps" }
        }
      },
      {
        "id": 5,
        "title": "JVM Heap Memory",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{application=\"zticket\",area=\"heap\"}",
            "legendFormat": "{{id}} used"
          },
          {
            "expr": "jvm_memory_max_bytes{application=\"zticket\",area=\"heap\"}",
            "legendFormat": "{{id}} max"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "bytes" }
        }
      },
      {
        "id": 6,
        "title": "JVM Threads",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "jvm_threads_live_threads{application=\"zticket\"}",
            "legendFormat": "live"
          },
          {
            "expr": "jvm_threads_peak_threads{application=\"zticket\"}",
            "legendFormat": "peak"
          }
        ]
      },
      {
        "id": 7,
        "title": "HikariCP Active Connections",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"zticket\"}",
            "legendFormat": "active"
          },
          {
            "expr": "hikaricp_connections_idle{application=\"zticket\"}",
            "legendFormat": "idle"
          },
          {
            "expr": "hikaricp_connections_max{application=\"zticket\"}",
            "legendFormat": "max"
          },
          {
            "expr": "hikaricp_connections_pending{application=\"zticket\"}",
            "legendFormat": "pending"
          }
        ]
      },
      {
        "id": 8,
        "title": "GC Pause Time",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum{application=\"zticket\"}[30s])",
            "legendFormat": "{{action}} {{cause}}"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "s" }
        }
      }
    ]
  },
  "overwrite": true
}
